                                    <select class="form-control" style="width:100%" name="contractor_type" id="contractor_type">
                                        <option value="">Type</option>
                                        <option value="Group">Group</option>
                                        <option value="Individual">Individual</option>
                                    </select>
                                    <p class="d-none text-red warning-kuno">Please Input a Field</p>
                                </div>
                            </div>


                            <div class="col-md-6">

