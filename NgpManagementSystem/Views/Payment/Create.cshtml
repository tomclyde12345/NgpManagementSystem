
@{
    ViewBag.Title = "Index";
    Layout = (int)Session["Role_Id"] == 1 ? "~/Views/Shared/_LayoutAdmin.cshtml" : "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-green">
                <h4 class="text-white">Create Payments</h4>
                <div class="card-header-form">

                </div>
            </div>
            <br />
            <form id="paymentcreate">

                <div style="padding: 2px 2.5%">
                    <div class="row">

                        <div class="col-md-6">



                            <div class="form-group">
                                <label for="contract_no">contract_no</label>
                                <select class="form-control" style="width:100%" name="contract_no" id="contract_no">
                                    <option value=""> Select Contract</option>

                                </select>

                            </div>

                            <div class="form-group">
                                <label for="commodity_type">num_release</label>
                                <select id="num_release" name="num_release" class="form-control" style="width:100%">
                                    <option value="">Please Select a num_release</option>
                                    <option value="1st release">1st release</option>
                                    <option value="2nd release">2nd release</option>
                                    <option value="3rd release">3rd release</option>
                                    <option value="4th release">4th release</option>
                                    <option value="5th release">5th release</option>
                                    <option value="6th release">6th release</option>
                                    <option value="7th release">7th release</option>

                                </select>
                            </div>

                            <div class="form-group">
                                <label for="yearestablishedId">yearestablishedId</label>
                                <select class="form-control" style="width:100%" name="yearestablishedId" id="yearestablishedId">
                                    <option value=""> Select yearestablishedId</option>

                                </select>

                            </div>


                        </div>


                    </div>
                </div>
                <div class="text-center">
                    <div class="text-center">

                        <input type="submit" value="SAVE" class="btn bg-green text-white btn-sm contract_next" />

                    </div>

                </div>
                <br />

            </form>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        Payment();

    });
</script>



